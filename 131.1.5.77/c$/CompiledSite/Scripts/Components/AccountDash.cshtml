<div class="account-dash dash" ng-cloak>
    <div class="section account-details">
        <div class="row">
            <span class="label">חשבון:</span>
            <span class="account-number">{{ctrl.accountDash.Account.Name || 'אין נתונים'}}</span>
        </div>

        <div class="row">
            <span class="label">מנוהל בבנק:</span>
            <span class="managed-by">{{ctrl.accountDash.Account.ManagedBy || 'אין נתונים'}}</span>
        </div>
        <div class="row">
            <span class="label">מדיניות:</span>
            <span class="managed-by">{{(ctrl.accountDash.Account.InvestmentPolicy| limitTo:22) || 'אין נתונים'}}</span>
        </div>
    </div>
    <div class="section portfolio-value">
        <div class="title">שווי תיק</div>
        <div class="value">{{(ctrl.accountDash.PortfolioValue | currency:' ₪':0)|| 'אין נתונים'}}</div>
    </div>

    <div class="section yield-last-year">
        <div class="title">תשואה 12 חודשים אחרונים</div>
        <div class="value">
            <danel-yield danel-model="ctrl.accountDash.YieldLastYear">{{}}</danel-yield>
        </div>
    </div>
    <div class="section yield-start-year">
        <div class="title">תשואה מתחילת השנה</div>
        <div class="value ">
            <danel-yield danel-model="ctrl.accountDash.YieldStartYear">{{}}</danel-yield>
        </div>
    </div>
    <div class="section yield-36-month">
        <div class="title">תשואה 36 חודשים אחרונים</div>
        <div class="value">
            <danel-yield danel-model="ctrl.accountDash.Yield3Years">{{}}</danel-yield>
        </div>
    </div>
</div>
